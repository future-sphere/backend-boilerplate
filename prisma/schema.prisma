model Student {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  age       Int
  grade     String
  orders    Order[]
}

model Product {
  id       Int     @id @default(autoincrement())
  title    String
  price    Int
  quantity Int
  orders   Order[]
}

model Order {
  id        Int       @id @default(autoincrement())
  student   Student   @relation(fields: [studentId], references: [id], onDelete: Restrict)
  studentId Int
  products  Product[]
}
